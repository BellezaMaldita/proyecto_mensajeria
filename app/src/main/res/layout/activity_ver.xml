<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ver_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/electric_blue">

    <TextView
        android:id="@+id/txtTituloVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registros del Bosque Encantado"
        android:textColor="@color/electric_purple"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/textVerDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:textColor="#2E3A2D" />

</LinearLayout>
